    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const bracketsToggle = document.getElementById('bracketsToggle');
            const bracketsImage = document.getElementById('bracketsImage');
            const winnersToggle = document.getElementById('winnersToggle');
            const winnersImage = document.getElementById('winnersImage');

            bracketsToggle.addEventListener('click', function() {
                bracketsImage.classList.toggle('hidden');
            });

            winnersToggle.addEventListener('click', function() {
                winnersImage.classList.toggle('hidden');
            });
